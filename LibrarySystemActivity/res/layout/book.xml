<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="70dp"
  android:padding="5dip">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1">
        <TextView android:padding="2dp" android:text="정현이의안드로이드" android:layout_width="wrap_content" android:id="@+id/booktitle" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content"></TextView>
        <TextView android:padding="2dp" android:text="000000" android:layout_width="wrap_content" android:id="@+id/bookid" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:padding="2dp" android:text="이정현" android:layout_width="wrap_content" android:id="@+id/author" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content"></TextView>
        <TextView android:padding="2dp" android:text="매지마트사" android:layout_width="wrap_content" android:id="@+id/publisher" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    
</LinearLayout>
