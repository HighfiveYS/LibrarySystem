<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:gravity="center">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:gravity="center|center_vertical|center_horizontal">
        <Button android:text="Vol Down" android:layout_height="match_parent" android:id="@+id/voldown" android:layout_width="90dp"></Button>
        <Button android:text="Vol Up" android:layout_height="match_parent" android:id="@+id/volup" android:layout_width="90dp"></Button>
        <Button android:text="Mute" android:id="@+id/mute" android:layout_width="90dp" android:layout_height="wrap_content"></Button>
        <Button android:text="Unmute" android:id="@+id/unmute" android:layout_width="90dp" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:gravity="center|center_vertical|center_horizontal">
        <Button android:layout_width="70dp" android:text="Play" android:layout_height="wrap_content" android:id="@+id/play"></Button>
        <Button android:layout_width="70dp" android:text="Pause" android:layout_height="wrap_content" android:id="@+id/pause"></Button>
        <Button android:layout_width="70dp" android:text="Stop" android:layout_height="wrap_content" android:id="@+id/stop"></Button>
    </LinearLayout>
    
</LinearLayout>
